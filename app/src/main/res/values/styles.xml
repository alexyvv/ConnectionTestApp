<resources>

    <!-- Базовая тема приложеиня -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Цвет для action bar-а приложения -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Темынй вариант для статус бара и контекстных баров приложения -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Контролы UI, такие как "чекбоксы" и "текстовые поля" -->
        <item name="colorAccent">@color/accent</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@color/accent_light</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/primary</item>
    </style>

</resources>
